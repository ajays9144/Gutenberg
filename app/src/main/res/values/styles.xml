<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Heading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">@dimen/txt_size_head_medium</item>
        <item name="android:textColor">@color/colorViolet</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/txt_size_body_medium</item>
    </style>


</resources>
