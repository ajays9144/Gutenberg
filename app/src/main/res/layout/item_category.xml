<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_medium"
    android:minHeight="@dimen/item_genre_card_height"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_medium"
    android:paddingEnd="@dimen/padding_medium"
    app:cardCornerRadius="@dimen/padding_small"
    app:cardElevation="@dimen/padding_x_small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_medium_large"
            android:contentDescription="@string/title_fiction"
            android:src="@drawable/ic_fiction" />

        <TextView
            android:id="@+id/txt_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_category"
            android:padding="@dimen/padding_small"
            android:text="@string/title_fiction"
            android:textAppearance="@style/TextAppearance.Heading"
            android:textColor="@color/colorMineShaft" />

        <ImageView
            android:id="@+id/img_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_medium"
            android:contentDescription="@string/txt_next"
            android:src="@drawable/ic_next" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>